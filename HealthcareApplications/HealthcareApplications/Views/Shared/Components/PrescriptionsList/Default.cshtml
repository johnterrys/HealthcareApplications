@model HealthcareApplications.Models.PatientsPrescriptionsViewModel

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prescriptions[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescriptions[0].PrescribedDrugId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescriptions[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescriptions[0].Dosage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescriptions[0].RefillCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Prescriptions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrescribedDrugId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dosage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RefillCount)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Prescriptions" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-controller="Prescriptions" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-controller="Prescriptions" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>