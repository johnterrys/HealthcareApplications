@model HealthcareApplications.Models.PatientsPhysicianViewModel

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].Id)
            </th>
            <th>   
                @Html.DisplayNameFor(model => model.Patients[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Patients)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Patients" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-controller="Patients" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

