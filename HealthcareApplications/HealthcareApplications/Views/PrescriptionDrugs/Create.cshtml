@model HealthcareApplications.Models.PrescriptionDrugsCreateViewModel

@{
    ViewData["Title"] = "Create";
}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js" defer></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        $('#ddlDrugs').select2();
    });
</script>
<h1>Create</h1>

<h4>Prescription Drug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DrugsList" class="control-label"></label>
                <div>
                    @Html.DropDownListFor(m => m.SelectedDrugId, Model.DrugsList, new { @class = "form-control", @id = "ddlDrugs" })
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PrescriptionDrug.Quantity" class="control-label"></label>
                <input asp-for="PrescriptionDrug.Quantity" class="form-control" />
                <span asp-validation-for="PrescriptionDrug.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrescriptionDrug.Dosage" class="control-label"></label>
                <input asp-for="PrescriptionDrug.Dosage" class="form-control" />
                <span asp-validation-for="PrescriptionDrug.Dosage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrescriptionDrug.RefillCount" class="control-label"></label>
                <input asp-for="PrescriptionDrug.RefillCount" class="form-control" />
                <span asp-validation-for="PrescriptionDrug.RefillCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Prescriptions" asp-action="Details" asp-route-id="@Model.PrescriptionDrug.PrescriptionId">Back to Prescription</a>
</div>

